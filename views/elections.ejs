<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="grid grid-cols-6 my-4">
      <div
        class="col-start-3 col-span-2 w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0"
      >
        <div
          class="p-6 space-y-4 md:space-y-6 sm:p-8"
        >
          <%- include('partials/header') %>
          <p class="py-2"><%= welcomeMessage %>, See your elections here</p>
        </div>
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <%- include('partials/election', {headingTitle:"New Elections", countName:"count-of-new-elections",
      data:newElections}) %>
        </div>
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <%- include('partials/election', {headingTitle:"Active Elections", countName:"count-of-active-elections",
      data:activeElections}) %>
        </div>
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <%- include('partials/election', {headingTitle:"Completed Elections", countName:"count-of-completed-elections",
      data:completedElections}) %>
        </div>
      </div>
      <div class="col-start-3 col-span-2">
        <%- include('partials/footer') %>
      </div>
    </div>
  </body>
</html>
