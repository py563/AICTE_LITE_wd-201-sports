<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="grid grid-cols-6 my-4">
      <div
        class="col-start-3 col-span-2 w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0"
      >
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <%- include('partials/voterHeader') %>
          <h6
            class="text-base font-bold leading-tight tracking-tight text-gray-900 md:text-2xl"
          >
            Vote for Election :!www!
          </h6>
          <form
            class="space-y-4 md:space-y-6"
            action=""
            method="post"
          >
            <div class="max-w-md mx-auto">
              <% for (let i = 0; i < 4; i++) { %>
              <div class="my-4">
                <h2 class="text-lg font-medium">question <%= i %></h2>
                <p class="text-sm text-gray-500">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit.
                </p>
                <% for (let j = 0; j < 3; j++) { %>
                <label class="inline-flex items-center mt-2">
                  <input
                    type="radio"
                    class="form-radio"
                    name="question<%= i %>"
                    value="questionsI.answersJ"
                  />
                  <span class="ml-2"><%= j %></span>
                </label>
                <% } %>
              </div>
              <% } %>
            </div>
            <button
              type="submit"
              class="w-full text-blue bg-sky-600 hover:bg-cyan-600 focus:ring-4 focus:outline-none focus:ring-aqua-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
            >
              Submit
            </button>
          </form>
        </div>
      </div>
      <div class="col-start-3 col-span-2">
        <%- include('partials/footer') %>
      </div>
    </div>
  </body>
</html>
